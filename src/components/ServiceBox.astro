---
const text = Astro.props.text;
const h3 = Astro.props.h3;
const color = Astro.props.color;
---

<div class={`servicebox-${color}`}>
  <slot />
  <h3>{h3}</h3>
  <p>{text}</p>
</div>

<style>
  div {
    display: flex;
    width: 12.18769rem;
    padding: 0.8rem 0.8rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
    flex-shrink: 0;
    border-radius: 1.25rem;
    background: #ebebeb;
  }

  .servicebox-dark {
    background-color: #181818;
    color: #fff;
  }

  .servicebox-dark h3 {
    color: #fff;
  }

  .servicebox-dark p {
    color: #fff;
  }

  h3 {
    color: var(--heading-color);
    font-family: var(--heading-font);
    font-size: var(--heading-size7);
    font-style: var(--heading-style);
    font-weight: 700;
    line-height: 116%;
  }

  @media only screen and (min-width: 1200px) {
    div {
      display: flex;
      width: 18.18769rem;
      padding: 0.8rem 0.8rem;
      flex-direction: column;
      align-items: flex-start;
      gap: 0.625rem;
      flex-shrink: 0;
      border-radius: 1.25rem;
      background: #ebebeb;
    }
  }
</style>
